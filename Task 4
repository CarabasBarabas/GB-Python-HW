#Задача 4#

import random

k = int(input('Введите число:'))
a = int(random.randint(0, 101))
b = int(random.randint(0, 101))
c = int(random.randint(0, 101))
n = [a, b, c]
str1 = a, '*x**', k,'+', b, '*x', '+', c
print("".join(map(str,str1)))


with open('Task4.txt', 'w') as file:
    file.write("".join(map(str,str1)))
